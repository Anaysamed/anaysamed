algoritmo "semnome"
var
mp, mf, af, n1, n2, n3: real


inicio
escreval ("digite sua primeira nota")
leia (n1)
escreval ("digite sua segunda nota")
leia (n2)
escreval ("digite sua terceira nota")
leia (n3)

mp := (n1+n2+n3)/3

  se (mp>=7) entao
 escreval ("parabens, você esta aprovado por média")
 senao
   se (mp < 3.5) entao
 escreval ("você esta reprovado por média")
 senao
   escreval ("digite a nota da avaliação final")
   leia (af)
   mf := ((6*mp)+(4*af))/10
  se (mf>=5) entao
  escreval ("parabéns, você foi aprovado na final")
   senao
  escreval ("reprovado na final")
  fimse
  fimse
  fimse


fimalgoritmo
